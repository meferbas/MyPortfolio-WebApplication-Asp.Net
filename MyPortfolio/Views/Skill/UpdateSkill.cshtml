@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek & İlgi Alanı Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="SkillId" />
							<label>Yeni Yetenek Adı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Yeni Değer</label>
							<input type="text" asp-for="Value" class="form-control" />
							<br />
							<button class="btn btn-warning">Deneyimi Güncelle</button>
							<br />
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


