
@model Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" asp-for="MessageId" />

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Detayları</div>
					</div>
					<div class="card-body">
						<div class="card-sub">

							<b>Gönderen:</b> @Model.NameSurname
							<br />
							<b>Email:</b>: @Model.Email
							<br />
							<b>Konu:</b> @Model.Subject
							<br />
							<b>Tarih:</b> @Model.SendDate.ToShortDateString();
							<br />
							<br />
							<b>Mesaj:</b> @Model.MessageDetail
							<br />

							<br />
							<a href="/Message/Inbox" class="btn btn-primary">Geri Dön</a>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
