@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda Kısmıyla İlgili Güncellemeyi Buradan Yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Hakkımda Giriş</th>
									<th scope="col">Hakkımda Detay</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
									<tr>
										<td>@ViewBag.aboutTitle</td>
										<td>@ViewBag.aboutSubDescription</td>
										<td>@ViewBag.aboutDetail</td>
										<td><a href="/About/UpdateAbout/1" class="btn btn-success">Güncelle</a></td>
									</tr>
								
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

